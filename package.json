{
  "name": "spotify-loop-player",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://justasmonkev.github.io/spotify-loop-player",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite",
    "prepare": "husky install",
    "precommit": "git diff --name-only --cached | grep '^src/' && npx playwright test && npm run test-ct",
    "test-ct": "playwright test -c playwright-ct.config.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "dependencies": {
    "@types/js-cookie": "^3.0.3",
    "axe-playwright": "^1.2.3",
    "dotenv": "^16.0.3",
    "js-cookie": "^3.0.5",
    "playwright": "^1.33.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.11.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.34.3",
    "@playwright/test": "^1.33.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-modal": "^3.16.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-gh-pages": "^0.4.1"
  }
}
